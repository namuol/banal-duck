user-select()
  -webkit-touch-callout arguments
  -webkit-user-select arguments
  -khtml-user-select arguments
  -moz-user-select arguments
  -ms-user-select arguments
  -o-user-select arguments
  user-select arguments

*
  user-select none

body
  border 0
  padding 0
  margin 0
  font-family sans-serif, Arial

#layout
  height 100%
  width 100%

#layout td
  text-align center
  width 33%

#grid
  border-collapse collapse
  margin 0 auto

#grid_wrap
  width 453px
  min-width 453px

#grid td
  border 1px solid #888
  width 150px
  height 150px

#a_button, #b_button
  color #888
  font-weight bold

#grid td.highlighted
  background #369

.success
  background #afa

.failure
  background #faa

#hud
  font-weight bold
  height 30px

#type
  float left
#remaining
  float right

#results
  text-shadow 0px 1px 3px rgba(0, 0, 0, 0.9)
  display inline-block
  color #ccc
  width 100%
  height 100%
  background rgba(0,0,0,0.75)
  top 0
  left 0
  position absolute
  text-align center

.bad
  color #faa

.better
  color #ffa

.excellent
  color #afa

#percent_wrapper
  width 100%
  height 100%
  position absolute
  top 0
  left 0

#percent_wrapper table
  width 100%
  height 100%
  margin 0
  padding 0
  border 0
  border-collapse collapse

#percent_wrapper table tr td#percent
  font-size 48pt
  vertical-align middle
  text-align center

#instructions
  padding 15px
  text-align left
  font-size 18pt

#start_game_msg
  width 100%
  text-align center
  position absolute
  bottom 15px
  font-size 24pt
